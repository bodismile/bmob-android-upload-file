<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity" >

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:text="@string/tips"
        android:textSize="18sp"
        
        />
    <Button
        android:id="@+id/tv_one_one"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单条数据，一个BmobFile列" />
    <Button
        android:id="@+id/tv_one_many"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单条数据，多个BmobFile列" />
    
    <Button
        android:id="@+id/tv_many_one"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多条数据，每条数据一个BmobFile列" />
    
    <Button
        android:id="@+id/tv_many_many"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多条数据，每条数据多个BmobFile列" />

</LinearLayout>
